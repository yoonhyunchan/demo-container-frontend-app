{
    "family": "yoon-frontend-task",
    "networkMode": "awsvpc",
    "cpu": "1024",
    "memory": "2048",
    "executionRoleArn": "ecsTaskExecutionRole",
    "requiresCompatibilities": [
        "FARGATE"
    ],

    "containerDefinitions": [
        {
            "name": "web",
            "image": "PLACEHOLDER",
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80,
                    "protocol": "tcp"
                }
            ],
            "healthCheck": { 
	            "command": ["CMD-SHELL", "curl -f http://localhost/health || exit 1"], 
	            "interval": 30, 
	            "timeout": 5, 
	            "retries": 2, 
	            "startPeriod": 60 
	        }
        }
    ]
}